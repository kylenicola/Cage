<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    ><RelativeLayout
        android:id="@+id/movieView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black" >

        <VideoView
            android:id="@+id/abcs_videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/abcs_countAndLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abcs_introDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="@string/abcs_intro_info"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/abcs_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="35sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/keyView"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="bottom|center"
        android:background="@color/keyboard_background"
        android:gravity="bottom|center" >

        <Button
            android:id="@+id/ButtonQ"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:onClick="onLetterClick"
            android:text="Q"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonW"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonQ"
            android:layout_alignBottom="@+id/ButtonQ"
            android:layout_toRightOf="@+id/ButtonQ"
            android:onClick="onLetterClick"
            android:text="W"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonE"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonW"
            android:layout_alignBottom="@+id/ButtonW"
            android:layout_toRightOf="@+id/ButtonW"
            android:onClick="onLetterClick"
            android:text="E"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonR"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonE"
            android:layout_alignBottom="@+id/ButtonE"
            android:layout_toRightOf="@+id/ButtonE"
            android:onClick="onLetterClick"
            android:text="R"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonT"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonR"
            android:layout_alignBottom="@+id/ButtonR"
            android:layout_toRightOf="@+id/ButtonR"
            android:onClick="onLetterClick"
            android:text="T"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonY"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonT"
            android:layout_alignBottom="@+id/ButtonT"
            android:layout_toRightOf="@+id/ButtonT"
            android:onClick="onLetterClick"
            android:text="Y"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonU"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonY"
            android:layout_alignBottom="@+id/ButtonY"
            android:layout_toRightOf="@+id/ButtonY"
            android:onClick="onLetterClick"
            android:text="U"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonI"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonU"
            android:layout_alignBottom="@+id/ButtonU"
            android:layout_toRightOf="@+id/ButtonU"
            android:onClick="onLetterClick"
            android:text="I"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonO"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonI"
            android:layout_alignBottom="@+id/ButtonI"
            android:layout_toRightOf="@+id/ButtonI"
            android:onClick="onLetterClick"
            android:text="O"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonA"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ButtonW"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:onClick="onLetterClick"
            android:text="A"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonD"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonS"
            android:layout_alignBottom="@+id/ButtonS"
            android:layout_toRightOf="@+id/ButtonS"
            android:onClick="onLetterClick"
            android:text="D"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonS"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/ButtonA"
            android:layout_toRightOf="@+id/ButtonA"
            android:onClick="onLetterClick"
            android:text="S"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonF"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonD"
            android:layout_alignBottom="@+id/ButtonD"
            android:layout_toRightOf="@+id/ButtonD"
            android:onClick="onLetterClick"
            android:text="F"
