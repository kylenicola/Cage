            android:onClick="onLetterClick"
            android:text="V"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonP"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonO"
            android:layout_alignBottom="@+id/ButtonO"
            android:layout_toRightOf="@+id/ButtonO"
            android:onClick="onLetterClick"
            android:text="P"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />
    </RelativeLayout>

</LinearLayout>