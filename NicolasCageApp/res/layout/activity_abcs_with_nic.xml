            android:layout_toRightOf="@+id/ButtonZ"
            android:onClick="onLetterClick"
            android:text="X"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonN"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonB"
            android:layout_alignBottom="@+id/ButtonB"
            android:layout_toRightOf="@+id/ButtonB"
            android:onClick="onLetterClick"
