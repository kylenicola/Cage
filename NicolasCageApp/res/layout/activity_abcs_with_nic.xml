            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonZ"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ButtonA"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ButtonQ"
            android:onClick="onLetterClick"
            android:text="Z"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonC"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonX"
            android:layout_alignBottom="@+id/ButtonX"
            android:layout_alignParentLeft="false"
            android:layout_toRightOf="@+id/ButtonX"
            android:onClick="onLetterClick"
            android:text="C"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonB"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonV"
            android:layout_alignBottom="@+id/ButtonV"
            android:layout_toRightOf="@+id/ButtonV"
            android:onClick="onLetterClick"
            android:text="B"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonM"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonN"
            android:layout_alignBottom="@+id/ButtonN"
            android:layout_toRightOf="@+id/ButtonN"
            android:onClick="onLetterClick"
            android:text="M"
            android:textColor="@color/keyboard_letter"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/ButtonX"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/ButtonZ"
            android:layout_alignBottom="@+id/ButtonZ"
